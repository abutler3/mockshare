<div class="row">
  <div class="span6 offset2">
    <div class="well">
      <div class="show_solo">
        <%= image_tag @card.image.url(:medium) %>
        <p>
          <%= @card.description %>
        </p>
        <p>
          By: <%= @card.user.name %>
        </p>
        <p>
        <% if current_user == @card.user %>
          <%= link_to 'Edit', edit_card_path(@card) %> |
        <% end %>
          <%= link_to 'Back', cards_path %>
        </p>
      </div>
    </div>
  </div>
</div>
